<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="buttons">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="buttonsSmall">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="background">@drawable/btn_rounded</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="recyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="recyclerViewHorizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:icon">@drawable/logo</item>
        <item name="logo">@drawable/logo</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>
</resources>